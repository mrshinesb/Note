Install Flutter
sudo apt update
sudo apt install git curl unzip xz-utils zip libglu1-mesa -y
cd ~
git clone https://github.com/flutter/flutter.git -b stable
echo 'export PATH="$PATH:$HOME/flutter/bin"' >> ~/.bashrc
source ~/.bashrc
flutter doctor
